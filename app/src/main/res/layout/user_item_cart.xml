<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <RelativeLayout
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgCartItemLaptop"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/anh3" />

            <TextView
                android:id="@+id/nameCartItemLaptop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgCartItemLaptop"
                android:text="Laptop Asus VivoBook A515EA-BQ1530W"
                android:textColor="#E91E63"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceCartItemLaptop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameCartItemLaptop"
                android:layout_toRightOf="@id/imgCartItemLaptop"
                android:text="340000 â‚«"
                android:textColor="#D66F92"
                android:textSize="16dp" />

            <ImageButton
                android:layout_below="@+id/priceCartItemLaptop"
                android:layout_toRightOf="@id/imgCartItemLaptop"
                android:id="@+id/ibMinus"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_indeterminate_check_box_24" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/priceCartItemLaptop"
                android:layout_toRightOf="@id/ibMinus"
                android:gravity="center"
                android:text="1"
                android:textSize="18dp" />
            <ImageButton
                android:layout_below="@+id/priceCartItemLaptop"
                android:layout_toRightOf="@id/tvQuantity"
                android:id="@+id/ibPlus"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_add_box_24" />

        </RelativeLayout>
        <ImageButton
            android:id="@+id/ibCartDelLaptop"
            android:layout_gravity="center"
            android:padding="9dp"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_weight="1"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>