<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <RelativeLayout
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAdminItemLaptop"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/anh3" />

            <TextView
                android:id="@+id/nameAdminItemLaptop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imgAdminItemLaptop"
                android:text="Laptop Asus VivoBook A515EA-BQ1530W"
                android:textColor="#E91E63"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceAdminItemLaptop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameAdminItemLaptop"
                android:layout_toRightOf="@id/imgAdminItemLaptop"
                android:text="340000 â‚«"
                android:textColor="#D66F92"
                android:textSize="16dp" />

        </RelativeLayout>
        <ImageButton
            android:id="@+id/ibUpdateLaptop"
            android:layout_gravity="center"
            android:padding="9dp"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/ibDelLaptop"
            android:layout_gravity="center"
            android:padding="9dp"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_weight="1"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>